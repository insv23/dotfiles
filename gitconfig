[init]
	defaultBranch = main

[alias]
    drop = restore --
    dropall = restore -- .
    unadd = reset HEAD
    uncmt = reset HEAD^
    cma = commit --amend
    br = branch
    brd = branch -d
    ck = checkout
    ckb = checkout -b
    sw = switch
    swc = switch -c
    ri = rebase -i
	st = status -sb
	cmm = commit -m
    ll = log --oneline
    llg = log --oneline --grep
	pushom = push origin main
	pullom = pull origin main
[core]
	editor = micro
	autocrlf = input
	pager = delta
	excludesfile = ~/.dotfiles/gitignore_global
[user]
	name = insv
	email = insv23@outlook.com
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	side-by-side = true
	pager = less --mouse --wheel-lines=3 -R -F -X
	line-numbers = true
	line-fill-method = spaces
	syntax-theme = Coldark-Dark
	file-style = omit
	file-decoration-style = omit
	hunk-header-style = file line-number syntax


    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
