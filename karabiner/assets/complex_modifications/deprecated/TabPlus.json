{
    "title": "Tab to Typer/Tab",
    "rules": [
        {
            "description": "Tab to Typer(Shift+Opt+Cmd) or Tab(If alone)",
            "manipulators": [
                {
                    "from": {
                        "key_code": "tab"
                    },
                    "to": [
                        {
                            "key_code": "left_shift",
                            "modifiers": ["left_command", "left_option"]
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "tab"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}